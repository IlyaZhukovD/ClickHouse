{
    "name": "ClickHouse Builder",
    "image": "clickhouse/binary-builder:latest",

    


    // Настройки VS Code внутри контейнера
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "llvm-vs-code-extensions.vscode-clangd",
                "vadimcn.vscode-lldb"
            ],
            "settings": {
                // Отключаем стандартный IntelliSense, так как проект огромный.
                // Clangd справляется лучше.
                "C_Cpp.intelliSenseEngine": "Disabled",
                "cmake.configureOnOpen": false,
                "clangd.arguments": [
                    "--background-index",
                    "--clang-tidy",
                    "--completion-style=detailed",
                    "--header-insertion=iwyu"
                ]
            }
        }
    },

    // Работаем от root, чтобы можно было устанавливать пакеты при необходимости
    "remoteUser": "root"
}